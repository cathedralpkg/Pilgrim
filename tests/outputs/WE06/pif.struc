#------------------------------------------#
# Cluster of torsional conformers:  MINIMA #
#------------------------------------------#
start_ctc nd3_pyram
   root      nh3_pyram
   # conformers & anharmonicity
   conformer 001  * 1 #  0.000 kcal/mol, C3v
   # basic data
   mformu    H(3)N
   ch        0
   mtp       1
   type      0
   freqscal  1.078
   elestate  1  0.0000000000E+00
   # isotopic modifications
   iso       D(all_H)
end_ctc

