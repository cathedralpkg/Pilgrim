#------------------------------------------#
# Cluster of torsional conformers: SADDLES #
#------------------------------------------#
start_ctc nd3_planar
   root      nh3_planar
   # conformers & anharmonicity
   conformer 001  * 1 #  0.000 kcal/mol, D3h
   # basic data
   mformu    H(3)N
   ch        0
   mtp       1
   type      1
   freqscal  1.078
   elestate  1  0.0000000000E+00
   # isotopic modifications
   iso       D(all_H)
   # internal coordinates
   ics         1-2  1-3  1-4
   ics         2-1-3  2-1-4  3-1-4
   ics         2_3_4_1
end_ctc

