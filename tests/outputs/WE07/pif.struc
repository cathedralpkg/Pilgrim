   # conformers & anharmonicity
   conformer 001  * 2 #  0.000 kcal/mol, C1
   conformer 002  * 1 #  0.246 kcal/mol, Cs
   # basic data
   mformu    C(2)H(6)O
   ch        0
   mtp       1
   type      0
   freqscal  1.000
   elestate  1  0.0000000000E+00
end_ctc

